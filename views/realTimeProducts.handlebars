<div>
    {{> header}}
    {{> title titulo="Admin"}}
    <div class="container">
        <section class="form">
            <article class="dnone .article" id="article">
                <h2 class="title">Agregar un producto</h2>
                <form action="" class="crud-form" id="crud-form">
                <input type="text" name="name" id="name" placeholder="Nombre"> 
                <br>
                <input type="text" name="description" id="description" placeholder="Descripcion"> 
                <br>
                <input type="text" name="price" id="price" placeholder="Precio"> 
                <br>
                <input type="text" name="stock" id="stock" placeholder="Stock"> 
                <br>
                <input type="text" name="category" id="category" placeholder="Categoria"> 
                <br>
                <input type="text" name="code" id="code" placeholder="Codigo"> 
                <br>
                <input id="form-file" type="file" name="file" placeholder="Imagen"/>
                <br>
                <input type="submit" value="Guardar Producto">
            </form>
                <p id="producto-id"></p>
            </article>
        </section>
        <table class="table">
            <caption>Control de stock</caption>
            <button class="add-btn" id="add-btn">Desplegar menu</button>
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Descripcion</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Categoria</th>
                    <th>Codigo</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody id="tbody">
                
            </tbody>
        </table>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="js/realTimeProducts.js"></script>